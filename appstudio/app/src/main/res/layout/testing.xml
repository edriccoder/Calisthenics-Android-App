<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Your first layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input your height and weight"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.254" />

            <EditText
                android:id="@+id/height"
                android:layout_width="166dp"
                android:layout_height="57dp"
                android:background="@drawable/border"
                android:ems="10"
                android:gravity="center"
                android:hint="Height"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/heightUnitSpinner"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.743" />

            <Spinner
                android:id="@+id/heightUnitSpinner"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:entries="@array/height_units"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/height"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.742" />

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Let us know you better"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.113" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="166dp"
                android:layout_height="57dp"
                android:background="@drawable/border"
                android:ems="10"
                android:gravity="center"
                android:hint="Weight"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/weightUnitSpinner"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.377" />

            <Spinner
                android:id="@+id/weightUnitSpinner"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:entries="@array/weight_units"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/weight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.377" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Add vertical space between the layouts -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <!-- Your second layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            tools:context=".focus">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Select your focus area"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.074" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but5"
                android:layout_width="353dp"
                android:layout_height="70dp"
                android:background="@drawable/button_week"
                android:drawableRight="@drawable/legs"
                android:padding="10dp"
                android:text="LEGS"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.704" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but6"
                android:layout_width="353dp"
                android:layout_height="70dp"
                android:background="@drawable/button_week"
                android:drawableRight="@drawable/backbody"
                android:paddingLeft="10dp"
                android:text="Back"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.838" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but4"
                android:layout_width="353dp"
                android:layout_height="70dp"
                android:background="@drawable/button_week"
                android:drawableRight="@drawable/abs"
                android:padding="10dp"
                android:text="ABS"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.563" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but2"
                android:layout_width="353dp"
                android:layout_height="70dp"
                android:background="@drawable/button_week"
                android:drawableRight="@drawable/healthicons_arm_outline"
                android:padding="10dp"
                android:text="Arm"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.284" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but3"
                android:layout_width="353dp"
                android:layout_height="70dp"
                android:background="@drawable/button_week"
                android:drawableRight="@drawable/image_3"
                android:padding="10dp"
                android:text="CHEST"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.426" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but1"
                android:layout_width="353dp"
                android:layout_height="70dp"
                android:background="@drawable/button_week"
                android:drawableRight="@drawable/healthicons_body_outline"
                android:padding="10dp"
                android:text="Full Body"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.14" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>
