<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".emg_bluetooth"
    android:padding="16dp"
    android:gravity="center">

    <!-- Bluetooth Status -->
    <TextView
        android:id="@+id/bluetoothStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Status: Disconnected"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/emgValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMG Value: "
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:gravity="center" />


    <TextView
        android:id="@+id/emgLevelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMG Level Gauge"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:gravity="center" />

    <!-- Gauge for EMG Levels -->
    <ProgressBar
        android:id="@+id/emgLevelGauge"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:progressDrawable="@drawable/custom_progressbar" />

    <TextView
        android:id="@+id/emgLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current EMG Level: Below Easy"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:gravity="center" />

    <!-- Send Threshold Button -->
    <Button
        android:id="@+id/sendThresholdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Threshold"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:textSize="18sp" />

    <!-- Connect to Bluetooth Button -->
    <Button
        android:id="@+id/connectBluetoothButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to Bluetooth"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:textSize="18sp" />

</LinearLayout>
