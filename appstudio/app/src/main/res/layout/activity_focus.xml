<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".focus">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Select your focus area"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="20dp"
        app:layout_constraintVertical_bias="0.05" />

    <!-- Back ImageButton -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/lets_icons_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.02" />

    <LinearLayout
        android:id="@+id/focus1_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/but1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:background="@drawable/button_week"
            android:drawableRight="@drawable/healthicons_body_outline"
            android:padding="10dp"
            android:text="Full Body"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/fullbody_info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="View Full Body muscle groups"
            android:layout_marginStart="8dp"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Focus Area 2: Arms -->
    <LinearLayout
        android:id="@+id/focus2_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/focus1_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/but2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:background="@drawable/button_week"
            android:drawableRight="@drawable/healthicons_arm_outline"
            android:padding="10dp"
            android:text="Arms"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/arm_info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="View Arms muscle groups"
            android:layout_marginStart="8dp"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Focus Area 3: Chest -->
    <LinearLayout
        android:id="@+id/focus3_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/focus2_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/but3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:background="@drawable/button_week"
            android:drawableRight="@drawable/image_3"
            android:padding="10dp"
            android:text="CHEST"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/chest_info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="View Chest muscle groups"
            android:layout_marginStart="8dp"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Focus Area 4: Abs -->
    <LinearLayout
        android:id="@+id/focus4_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/focus3_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/but4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:background="@drawable/button_week"
            android:drawableRight="@drawable/abs"
            android:padding="10dp"
            android:text="ABS"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/abs_info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="View Abs muscle groups"
            android:layout_marginStart="8dp"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Focus Area 5: Legs -->
    <LinearLayout
        android:id="@+id/focus5_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/focus4_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/but5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:background="@drawable/button_week"
            android:drawableRight="@drawable/legs"
            android:padding="10dp"
            android:text="LEGS"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/legs_info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="View Legs muscle groups"
            android:layout_marginStart="8dp"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Focus Area 6: Back -->
    <LinearLayout
        android:id="@+id/focus6_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/focus5_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/but6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:background="@drawable/button_week"
            android:drawableRight="@drawable/backbody"
            android:padding="10dp"
            android:text="Back"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/back_info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="View Back muscle groups"
            android:layout_marginStart="8dp"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Next Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:background="@drawable/edi_shape"
        android:backgroundTint="#000000"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/focus6_layout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
